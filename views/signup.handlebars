    <label for="firstname"><b>First Name: <br></b></label>
    <input type="text" placeholder="Input your first name" name="first_name" required>

    </br> </br>
    
    <label for="lastname"><b>Last Name: <br></b></label>
    <input type="text" placeholder="Input your last name" name="last_name" required>

    </br> </br>
    
    <label for="date_of_birth"><b>Birthday: <br></b></label>
    <input type="date" placeholder="Format: YYYY-MM-DD" name="date_of_birth" required>


    </br> </br>
    
    <label for="password"><b>Password: <br></b></label>
    <input type="password" placeholder="Create a secure password!" name="password" required>

    </br> </br>
    
    <label for="email"><b>Email: <br></b></label>
    <input type="email" placeholder="Input email address here" name="email" required>

